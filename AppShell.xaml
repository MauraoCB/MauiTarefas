<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTarefas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTarefas"
    xmlns:pages="clr-namespace:MauiTarefas.Pages"
    Shell.TabBarIsVisible="False">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent Icon="home.png"
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent Icon="task.png"
            Title="Tarefas"
            ContentTemplate="{DataTemplate pages:TarefasPage}"
            Route="Tarefas" />

        <ShellContent Icon="contacts.png"
            Title="Contatos"
            ContentTemplate="{DataTemplate pages:ContatosPage}"
            Route="Contatos" />

    </FlyoutItem>

</Shell>